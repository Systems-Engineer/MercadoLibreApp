<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextRow">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextSmall">
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>
    <style name="TextMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
    </style>
    <style name="TextLarge" parent="TextMedium">
        <item name="android:textSize">@dimen/text_large_size</item>
    </style>
    <style name="TextStrong">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ImageCenter">
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ImageFit">
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="TransparentBackground">
        <item name="android:background">@color/white_transparent</item>
    </style>
</resources>